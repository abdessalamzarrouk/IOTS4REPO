<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvReportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre du rapport"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvGenerationDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Généré le 30/04/2025 à 15:30"
            android:textColor="#757575"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <TextView
            android:id="@+id/tvReportPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Période: 01/04/2025 au 30/04/2025"
            android:textSize="14sp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvReportStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistiques du rapport..."
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnExport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exporter (PDF/Excel)"
            android:textColor="#FFFFFF"
            android:backgroundTint="#3F51B5"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>