<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ClientHomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="29dp">

        <!-- Button to look for offers -->
        <Button
            android:id="@+id/boutonChercherOffres"
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:layout_marginBottom="20dp"
            android:text="Chercher des offres"
            android:textSize="20sp" />

        <!-- Button to view my demands -->
        <Button
            android:id="@+id/boutonMesDemandes"
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:layout_marginBottom="20dp"
            android:text="Mes demandes"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/boutonProfile"
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:layout_marginBottom="20dp"
            android:text="Mon Profile"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/MakeComplaint"
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:text="Ajouter une réclamation"
            android:textSize="20sp"/>

        <!-- Button to logout -->
        <Button
            android:id="@+id/boutonLogout"
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:text="Se déconnecter"
            android:textSize="20sp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>