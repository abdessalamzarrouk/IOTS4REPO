<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners"
    android:padding="16dp"
    android:layout_margin="8dp">

<TextView
android:id="@+id/titreOffre"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Titre Offre"
android:textSize="18sp"
android:textStyle="bold" />

<TextView
android:id="@+id/descriptionOffre"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Description Offre"
android:textSize="14sp"
android:paddingTop="8dp"/>

<TextView
android:id="@+id/loyerOffre"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Loyer: 1000"
android:textSize="14sp"
android:paddingTop="8dp"/>

    <!-- Inspect Button -->
<Button
android:id="@+id/btnInspect"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Inspecter"
android:layout_marginTop="16dp" />
    </LinearLayout>
