<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDialogTicketTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre du ticket"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvDialogTicketCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Catégorie: Technique" />

            <TextView
                android:id="@+id/tvDialogTicketStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Statut: Ouvert"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDialogTicketDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Créé le: 30/04/2025"
            android:textColor="#757575"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDialogTicketDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description détaillée du problème..."
            android:background="#F5F5F5"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réponse:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/tvDialogTicketResponse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Réponse à la demande..."
            android:background="#F5F5F5"
            android:padding="8dp" />
    </LinearLayout>
</ScrollView>