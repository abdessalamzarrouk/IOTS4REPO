<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FF5722"/>  <!-- Pressed color -->
            <corners android:radius="30dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#2196F3" android:endColor="#0D47A1" android:angle="45"/>
            <corners android:radius="30dp"/>
            <padding android:left="20dp" android:right="20dp" android:top="15dp" android:bottom="15dp"/>
        </shape>
    </item>
</selector>
